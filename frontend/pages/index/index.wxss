/**index.wxss**/
.display {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx;
}

.backimage {
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  margin-top: 0%;
  z-index: -1;
}

.button-display {
  font-weight: normal;
  width: 30%;
  z-index: 555;
  margin: 30rpx;
  height: 30%;
  border: 1px solid rgba(245, 245, 245, 0);
  border-radius: 23px;
  color: #000000;
  font-size: 16px;
  text-align: center;
  letter-spacing: 2px;
  display: flex;
  align-content: center;
  flex-direction: column;
  justify-content: center;
  box-shadow: 2px 2px 10px #0000003f;
  background-color: #fdfdfdda;
}

.loading-display {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx;
  color: grey;
  text-shadow:1px 1px 1px #999999;
}